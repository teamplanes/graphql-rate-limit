{
  "name": "graphql-rate-limit",
  "version": "1.2.1",
  "description": "A GraphQL Directive to Rate Limit Queries or Mutations ðŸ’‚â€â™€",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/teamplanes/graphql-rate-limit",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "describe": "npm-scripts-info",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc --preserveWatchOutput -p tsconfig.json",
    "build:module": "tsc --preserveWatchOutput -p tsconfig.module.json",
    "example": "concurrently \"yarn build:main -w --outDir ./example/.yalc/graphql-rate-limit\" \"cd example && yarn dev\"",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc --silent ava",
    "watch": "run-s clean build:main && run-p \"build:main -w\" \"test:unit --watch --verbose\"",
    "cov": "run-s build test:unit cov:html && opn coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "clean": "trash build test",
    "all": "run-s reset test cov:check doc:html"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "cov": "Rebuild, run tests, then create and open the coverage report",
    "reset": "Delete all untracked files and reset the repo to the last commit"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "@types/redis-mock": "^0.17.0",
    "graphql-tools": "^4.0.3",
    "lodash.get": "^4.4.2",
    "ms": "^2.1.1"
  },
  "peerDependencies": {
    "graphql": "*"
  },
  "devDependencies": {
    "@types/graphql": "^14.0.4",
    "@types/lodash.get": "^4.4.4",
    "@types/ms": "^0.7.30",
    "ava": "1.0.0-beta.7",
    "codecov": "^3.1.0",
    "concurrently": "^4.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "graphql": "^14.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "opn-cli": "^4.0.0",
    "prettier": "^1.15.2",
    "redis-mock": "^0.42.0",
    "standard-version": "^4.4.0",
    "trash-cli": "^1.4.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-immutable": "^5.0.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  },
  "ava": {
    "failFast": true,
    "files": [
      "build/main/**/*.spec.js"
    ],
    "sources": [
      "build/main/**/*.js"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
